<article class="story">
  <h1><%== @story.title_with_ruby.gsub("ã€€", "<br>") %></h1>

  <% if @story.has_image? %>
    <div class="story__image">
      <%= image_tag(@story.image) %>
    </div>
  <% end %>

  <div class="story"%>
    <%== @story.body %>
  </div>

</article>

<footer>
  <nav>
    <ul>
      <li><%= link_to "Back", root_path %></li>
      <li><%= link_to "View Original", @story.url, class: "story__link--original" %></li>
    </ul>
  </nav>
</footer>

<script type="text/javascript">
  $(function() {
    $(".lookup").click(function() {
      var term = $($(this).html().replace(/<rt>.*<\/rt>/, "")).text();
      window.location = "http://jisho.org/search/" + term;
    });
  });
</script>
